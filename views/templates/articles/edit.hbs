<form action='/articles/{{title}}?_method=PUT' method='post'>
  URL: {{urlTitle}}<br>
  Title: <input type='text' name='title' value='{{title}}'><br>
  Author: <input type='text' name='author' value='{{author}}'><br>
  Body: <input type='text' name='body' value='{{body}}'><br>
  <input type='submit' value='Submit'>
</form>

{{#if error}} 
  <div class='error_banner'>
    <img class='error_img' src='/resources/drudgesiren.gif'>
    <p>{{error}}</p>
  </div>
{{/if}}