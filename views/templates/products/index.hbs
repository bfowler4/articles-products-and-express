<h1>Product List</h1>

<ol class='product_list'>
  {{#each data}}
    <li>{{name}}
      <a href='http://localhost:8080/products/{{id}}/edit'><button>edit</button></a>
      <form action="/products/{{id}}?_method=DELETE" method='post'>
      <input type="submit" value="delete"/>
    </li>
    <ul>
      <li>ID: {{id}}</li>
      <li>Price: {{price}}</li>
      <li>Inventory: {{inventory}}</li>
    </ul>
  {{/each}}
</ol>